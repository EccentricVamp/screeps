{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "target": "ES2017",
    "strict": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src/",
  },
  "exclude": [
    "node_modules"
  ]
}
